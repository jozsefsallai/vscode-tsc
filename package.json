{
	"name": "vscode-tsc",
	"displayName": "Cave Story TSC",
	"description": "TSC language support for Visual Studio Code.",
	"version": "1.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jozsefsallai/vscode-tsc.git"
	},
	"bugs": {
		"url": "https://github.com/jozsefsallai/vscode-tsc/issues"
	},
	"homepage": "https://github.com/jozsefsallai/vscode-tsc#readme",
	"author": "@jozsefsallai",
	"publisher": "jozsefsallai",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:tsc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "tsc",
				"aliases": [
					"Cave Story TSC",
					"tsc"
				],
				"extensions": [
					".tsc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tsc",
				"scopeName": "source.tsc",
				"path": "./syntaxes/tsc.tmLanguage.json"
			}
		],
		"configuration": [
			{
				"title": "Cave Story TSC Configuration",
				"properties": {
					"tsc.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the TSC language server."
					}
				}
			}
		],
		"commands": [
			{
				"command": "vscode-tsc.restartLsp",
				"title": "Cave Story TSC: Restart Language Server"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mkdirp": "^1.0.1",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/node-fetch": "^2.5.7",
		"@types/openpgp": "^4.4.14",
		"@types/semver": "^7.3.4",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"lookpath": "^1.1.0",
		"mkdirp": "^1.0.4",
		"node-fetch": "^2.6.1",
		"openpgp": "^4.10.8",
		"semver": "^7.3.2",
		"vscode-languageclient": "^6.1.3"
	}
}
